# API Authentication
MEMORY_API_KEY=your-secret-api-key

# LLM Configuration (using LiteLLM with Ollama)
LLM_PROVIDER=litellm
LLM_MODEL=kimi-k2:1t-cloud
LLM_MAX_TOKENS=2000

# Ollama Cloud Configuration (via LiteLLM)
OLLAMA_API_BASE=https://api.ollama.ai
OLLAMA_API_KEY=your-ollama-api-key

# Embedder Configuration (using LiteLLM with Ollama)
EMBEDDER_PROVIDER=litellm
EMBEDDER_MODEL=nomic-embed-text
EMBEDDER_DIMENSIONS=768

# Database Configuration
# Options: redis, chroma
DATABASE_PROVIDER=redis
REDIS_URL=redis://localhost:6379
DB_COLLECTION_NAME=mem0

# Search Configuration
MEMORY_SEARCH_LIMIT=100

# CORS Configuration
ENVIRONMENT=development
# CORS_ORIGINS=https://example.com,https://another.com

# Railway Deployment (optional)
# RAILWAY_STATIC_URL=your-app.railway.app
# RAILWAY_PUBLIC_DOMAIN=your-domain.com
