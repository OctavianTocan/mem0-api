# API Authentication
MEMORY_API_KEY=your-secret-api-key-here

# Google Gemini API Key (Required for LLM and Embeddings)
GOOGLE_API_KEY=your-google-gemini-api-key

# LLM Configuration
LLM_PROVIDER=gemini
LLM_MODEL=models/gemini-2.5-flash
LLM_MAX_TOKENS=2000

# Embedder Configuration
EMBEDDER_PROVIDER=gemini
EMBEDDER_MODEL=models/text-embedding-004
EMBEDDER_DIMENSIONS=768

# Database Configuration
DATABASE_PROVIDER=redis
# Redis URL is automatically set in docker-compose
# For local development outside Docker: redis://localhost:6379
DB_COLLECTION_NAME=mem0

# Search Configuration
MEMORY_SEARCH_LIMIT=100

# Environment
ENVIRONMENT=development

# CORS Configuration (Optional)
# CORS_ORIGINS=https://example.com,https://another-domain.com

# Railway Configuration (Optional - for Railway deployment)
# RAILWAY_STATIC_URL=your-app.railway.app
# RAILWAY_PUBLIC_DOMAIN=your-domain.com
